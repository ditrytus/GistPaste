<UserControl x:Class="GistPaste.Desktop.Controls.Taskbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GistPaste.Desktop.Controls"
             mc:Ignorable="d"
             xmlns:tb="http://www.hardcodet.net/taskbar" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <tb:TaskbarIcon
            IconSource="/GistPaste.Desktop;component/Images/Treetog-I-Documents.ico"
            ToolTipText="GistPaste">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open Search Box" />
                    <MenuItem Header="Options" />
                    <MenuItem x:Name="ExitMenuItem" Header="Exit" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</UserControl>
